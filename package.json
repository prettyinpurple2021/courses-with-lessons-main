{
  "name": "solosuccess-intel-academy",
  "version": "1.0.0",
  "private": true,
  "description": "Premium learning platform for female entrepreneurs",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "npm run type-check --workspaces",
    "test": "npm run test --workspaces",
    "test:frontend": "npm run test --workspace=frontend",
    "test:backend": "npm run test --workspace=backend",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:smoke": "tsx scripts/smoke-tests.ts",
    "check:production": "tsx scripts/production-readiness-check.ts",
    "verify:videos": "tsx scripts/verify-youtube-videos.ts",
    "verify:alignment": "tsx scripts/verify-video-lesson-alignment.ts",
    "verify:alignment:search": "tsx scripts/verify-video-lesson-alignment.ts --search-better",
    "verify:content": "tsx scripts/verify-content-completeness.ts",
    "report:production": "tsx scripts/generate-production-report.ts",
    "content:update-titles": "tsx scripts/update-lesson-titles.ts",
    "content:update-videos": "tsx scripts/update-lesson-videos.ts",
    "content:add-exam-questions": "tsx scripts/add-exam-questions.ts",
    "content:setup-production": "tsx scripts/setup-production-content.ts",
    "content:fix-state": "tsx scripts/fix-production-state.ts",
    "deploy:frontend": "powershell -ExecutionPolicy Bypass -File scripts/deploy-frontend.ps1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@prisma/client": "^5.22.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@sentry/react": "^10.27.0",
    "redis": "^5.9.0"
  }
}
