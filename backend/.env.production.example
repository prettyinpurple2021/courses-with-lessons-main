# Production Environment Variables
# Copy this file to .env.production and fill in all values
# NEVER commit .env.production to version control

# Server Configuration
NODE_ENV=production
PORT=5000

# Database (PostgreSQL)
# Use connection pooling URL for better performance
DATABASE_URL=postgresql://username:password@host:5432/solosuccess_academy?schema=public&pgbouncer=true&connect_timeout=10

# JWT Secrets (REQUIRED - Generate strong secrets)
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_MIN_64_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_A_DIFFERENT_STRONG_RANDOM_SECRET_MIN_64_CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS (REQUIRED - Set to your production frontend URL)
CORS_ORIGIN=https://yourdomain.com

# Frontend URL (REQUIRED - For generating links in emails, certificates, etc.)
FRONTEND_URL=https://yourdomain.com

# Cookie Domain (REQUIRED - Set to your domain, e.g., .yourdomain.com)
COOKIE_DOMAIN=.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis (REQUIRED for production)
# Use connection string format
REDIS_URL=redis://:password@host:6379
# Or use individual components
REDIS_HOST=your-redis-host.redislabs.com
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password

# Cloudinary (REQUIRED for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Service - Resend (REQUIRED)
RESEND_API_KEY=re_your-resend-api-key
EMAIL_FROM=noreply@yourdomain.com

# YouTube API (REQUIRED for video validation)
YOUTUBE_API_KEY=your-youtube-api-key

# Sentry Error Tracking (Optional but recommended)
SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Logging
LOG_LEVEL=info

# Database Connection Pool (Optional - defaults shown)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

