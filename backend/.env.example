# Server Configuration
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/solosuccess_academy?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Frontend URL (for generating links in emails, certificates, etc.)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security & Cookies
# Set to your production domain for cookie security (e.g., .yourdomain.com)
COOKIE_DOMAIN=
# In production, ensure NODE_ENV=production for secure cookies and HSTS

# Redis (optional, for caching)
# Option 1: Use URL format (for local Redis)
REDIS_URL=redis://localhost:6379
# Option 2: Use credentials (for Redis Cloud)
REDIS_HOST=your-redis-host.redislabs.com
REDIS_PORT=12854
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password

# Cloudinary (for file storage - images, videos, avatars)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email Service (Resend)
RESEND_API_KEY=
EMAIL_FROM=noreply@yourdomain.com

# YouTube API (for video metadata)
YOUTUBE_API_KEY=

# Google Gemini (AI features)
GEMINI_API_KEY=
